{
  "name": "vue",
  "version": "1.0.0",
  "description": "my vue app",
  "author": "lisper",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.17.1",
    "vue": "^2.5.13",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "scripts": {
    "dev-watch": "watchify -vd -e src/app.js -o dist/js/app.js",
    "dev-serve": "live-server dist --entry-file=index.html",
    "dev": "npm-run-all -p dev-watch dev-serve",
    "production": "NODE_ENV=production browserify -g envify -e src/app.js | uglifyjs -c -m > dist/js/app.js",

    "gp-move": "tar -czf /tmp/dist.tar.gz dist && tar -xzf /tmp/dist.tar.gz -C /home/mhf/js/src/mhf-air.github.io --strip-components 1",
    "gp-git-push": "cd /home/mhf/js/src/mhf-air.github.io && git add . && git diff-index --quiet HEAD || git commit -m \"fix:\" && git push",
    "gp": "npm-run-all -s production gp-move gp-git-push"
  },
  "browserify": {
    "transform": [
      "babelify",
      "vueify"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^16.0.0",
    "envify": "^4.1.0",
    "live-server": "^1.2.0",
    "npm-run-all": "^4.1.2",
    "uglify-js": "^3.3.10",
    "vueify": "^9.4.1",
    "watchify": "^3.10.0"
  }
}
